@page "/converter"

<div class="converter-container">
    <div class="row">
        <label>From</label>
        <select value="@fromCurrency" @onchange="OnFromCurrencyChanged" class="dropdown">
            @foreach (var currency in currencies)
            {
                <option value="@currency">@currency</option>
            }
        </select>

        <button @onclick="SwapCurrencies" class="swap-btn">🔄</button>

        <label>To</label>
        <select @bind="toCurrency" class="dropdown">
            @foreach (var currency in currencies)
            {
                <option value="@currency">@currency</option>
            }
        </select>
    </div>

    <div class="flex flex-row">
        <input type="number" @bind="Amount" class="amount-input" min="0" />
        <span class="equal">=</span>
        <span class="converted">@convertedAmount.ToString("0.##")</span>
    </div>
</div>